generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////
// üè¢ NEGOCIOS (SALONES)
//////////////////////
model Business {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  phone     String?
  email     String?
  address   String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  users             User[]
  clients           Client[]
  employees         Employee[]
  services          Service[]
  appointments      Appointment[]
  payments          Payment[]
  reviews           Review[]
  loyaltyPoints     LoyaltyPoint[]
  serviceCategories ServiceCategory[]
  serviceExtras     ServiceExtra[]
}

//////////////////////
// üë§ USUARIOS
//////////////////////
model User {
  id         String   @id @default(uuid())
  businessId String
  name       String
  lastName   String
  email      String
  password   String
  role       Role     @default(RECEPTION)
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  business Business  @relation(fields: [businessId], references: [id])
  employee Employee?

  @@unique([businessId, email])
}

enum Role {
  ADMIN
  RECEPTION
  EMPLOYEE
}

//////////////////////
// üë©‚Äçüé® EMPLOYEEAS
//////////////////////
model Employee {
  id         String   @id @default(uuid())
  businessId String
  userId     String   @unique
  phone      String?
  bio        String?
  commission Float    @default(0.0)
  rating     Float    @default(0.0)
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())

  business     Business      @relation(fields: [businessId], references: [id])
  user         User          @relation(fields: [userId], references: [id])
  appointments Appointment[]
  reviews      Review[]
}

//////////////////////
// üë• CLIENTES
//////////////////////
model Client {
  id         String   @id @default(uuid())
  businessId String
  name       String
  phone      String?
  email      String?
  notes      String?
  createdAt  DateTime @default(now())

  business      Business       @relation(fields: [businessId], references: [id])
  appointments  Appointment[]
  reviews       Review[]
  loyaltyPoints LoyaltyPoint[]

  @@unique([businessId, phone])
}

//////////////////////
// üíÖ SERVICIOS
//////////////////////
model ServiceCategory {
  id         String   @id @default(uuid())
  businessId String
  name       String // MANOS, PIES, CABELLO, DEPILACI√ìN
  order      Int?
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())

  business Business  @relation(fields: [businessId], references: [id])
  services Service[]
}

model Service {
  id                String  @id @default(uuid())
  businessId        String
  categoryId        String
  name              String // Manicura, Pedicura, Ondas
  description       String?
  descriptionTicket String? @db.VarChar(15)
  duration          Int // minutos
  price             Float

  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  business Business        @relation(fields: [businessId], references: [id])
  category ServiceCategory @relation(fields: [categoryId], references: [id])

  appointmentServices AppointmentService[]
  variants            ServiceVariant[]
}

model ServiceVariant {
  id        String  @id @default(uuid())
  serviceId String
  name      String // Corto, Largo, Manos, Pies
  duration  Int // minutos
  price     Float
  active    Boolean @default(true)

  service Service @relation(fields: [serviceId], references: [id])
}

model ServiceExtra {
  id          String   @id @default(uuid())
  businessId  String
  name        String // Dise√±o por u√±a, Extralargo
  priceMin    Float?
  priceMax    Float?
  durationMin Int?
  durationMax Int?
  createdAt   DateTime @default(now())

  business          Business           @relation(fields: [businessId], references: [id])
  appointmentExtras AppointmentExtra[]
}

