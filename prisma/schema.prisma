generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//////////////////////
// üè¢ NEGOCIO
//////////////////////
model Business {
  id        String   @id @default(uuid())
  name      String
  slug      String   @unique
  phone     String?
  email     String?
  address   String?
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  users             User[]
  clients           Client[]
  employees         Employee[]
  services          Service[]
  appointments      Appointment[]
  sales             Sale[] // La Venta es ahora el eje principal
  cashCloses        CashClose[] // Cortes de caja para auditor√≠a
  payments          Payment[]
  reviews           Review[]
  loyaltyPoints     LoyaltyPoint[]
  serviceCategories ServiceCategory[]
  serviceExtras     ServiceExtra[]
}

//////////////////////
// üë§ USUARIOS
//////////////////////
model User {
  id         String   @id @default(uuid())
  businessId String
  name       String
  lastName   String
  email      String
  password   String
  role       Role     @default(RECEPTION)
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  business Business  @relation(fields: [businessId], references: [id])
  employee Employee?

  @@unique([businessId, email])
}

enum Role {
  ADMIN
  RECEPTION
  EMPLOYEE
}

//////////////////////
// üë• EMPLEADOS
//////////////////////
model Employee {
  id         String   @id @default(uuid())
  businessId String
  userId     String   @unique
  phone      String?
  bio        String?
  commission Float    @default(0.0)
  rating     Float    @default(0.0)
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())

  business     Business      @relation(fields: [businessId], references: [id])
  user         User          @relation(fields: [userId], references: [id])
  appointments Appointment[]
  reviews      Review[]
  sales        Sale[]
}

//////////////////////
// üë• CLIENTES
//////////////////////
model Client {
  id         String   @id @default(uuid())
  businessId String
  name       String
  phone      String?
  email      String?
  notes      String?
  createdAt  DateTime @default(now())

  business      Business       @relation(fields: [businessId], references: [id])
  appointments  Appointment[]
  reviews       Review[]
  loyaltyPoints LoyaltyPoint[]
  sales         Sale[]

  @@unique([businessId, phone])
}

//////////////////////
// üíÖ CATEGOR√çAS
//////////////////////
model ServiceCategory {
  id         String   @id @default(uuid())
  businessId String
  name       String // MANOS, PIES, CABELLO, DEPILACI√ìN
  order      Int?
  active     Boolean  @default(true)
  createdAt  DateTime @default(now())

  business Business  @relation(fields: [businessId], references: [id])
  services Service[]
}

//////////////////////
// üíÖ SERVICIOS
//////////////////////
model Service {
  id                String  @id @default(uuid())
  businessId        String
  categoryId        String
  name              String // Manicura, Pedicura, Ondas
  description       String?
  descriptionTicket String? @db.VarChar(15)
  duration          Int // minutos
  price             Float

  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  business Business        @relation(fields: [businessId], references: [id])
  category ServiceCategory @relation(fields: [categoryId], references: [id])

  appointmentServices AppointmentService[]
  variants            ServiceVariant[]
  saleItems           SaleItem[]
}

//////////////////////
// üéÅ VARIANTES DE SERVICIO
//////////////////////
model ServiceVariant {
  id        String  @id @default(uuid())
  serviceId String
  name      String // Corto, Largo, Manos, Pies
  duration  Int // minutos
  price     Float
  active    Boolean @default(true)

  service Service @relation(fields: [serviceId], references: [id])
}

//////////////////////
// üéÅ ADICIONALES DE SERVICIO
//////////////////////
model ServiceExtra {
  id          String   @id @default(uuid())
  businessId  String
  name        String // Dise√±o por u√±a, Extralargo
  priceMin    Float?
  priceMax    Float?
  durationMin Int?
  durationMax Int?
  createdAt   DateTime @default(now())

  business          Business           @relation(fields: [businessId], references: [id])
  appointmentExtras AppointmentExtra[]
}

//////////////////////
// üìÖ CITAS (Solo para gesti√≥n de tiempo)
//////////////////////
model Appointment {
  id            String            @id @default(uuid())
  businessId    String
  clientId      String?
  employeeId    String
  title         String
  start         DateTime
  end           DateTime
  allDay        Boolean           @default(false)
  status        AppointmentStatus @default(PENDING)
  notes         String?
  guestName     String?
  guestPhone    String?
  createdAt     DateTime          @default(now())
  paymentStatus PaymentState      @default(UNPAID) // Estado general de la deuda
  totalAmount   Float             @default(0) // El costo total del servicio (ej. $1000)
  // Relaci√≥n 1:1 con la Venta
  sale          Sale?

  business Business             @relation(fields: [businessId], references: [id])
  employee Employee             @relation(fields: [employeeId], references: [id])
  client   Client?              @relation(fields: [clientId], references: [id])
  services AppointmentService[]
}

enum PaymentState {
  UNPAID // No ha pagado nada
  PARTIALLY_PAID // Dio anticipo pero debe el resto
  PAID // Pagado al 100%
  REFUNDED // Se le devolvi√≥ el dinero
}

enum AppointmentStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

//////////////////////
// üîó CITA - SERVICIOS
//////////////////////
model AppointmentService {
  id            String @id @default(uuid())
  appointmentId String
  serviceId     String
  price         Float

  appointment       Appointment        @relation(fields: [appointmentId], references: [id])
  service           Service            @relation(fields: [serviceId], references: [id])
  appointmentExtras AppointmentExtra[]
}

//////////////////////
// üîó CITA - ADICIONALES
//////////////////////
model AppointmentExtra {
  id                   String             @id @default(uuid())
  appointmentServiceId String
  extraId              String
  quantity             Int                @default(1) // u√±as
  price                Float
  duration             Int
  appointmentService   AppointmentService @relation(fields: [appointmentServiceId], references: [id])
  extra                ServiceExtra       @relation(fields: [extraId], references: [id])
}

//////////////////////
// üí≥ PAGOS Y CAJA
//////////////////////
model Payment {
  id         String        @id @default(uuid())
  saleId     String
  businessId String
  amount     Float // Monto de este pago espec√≠fico
  method     PaymentMethod // CASH, CARD, TRANSFER
  status     PaymentStatus @default(COMPLETED)

  // Datos para el ticket y auditor√≠a
  amountReceived Float? // √ötil para calcular el cambio en efectivo
  changeReturned Float?

  createdAt DateTime @default(now())

  sale     Sale     @relation(fields: [saleId], references: [id])
  business Business @relation(fields: [businessId], references: [id])
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
  REFUNDED
}

//////////////////////
// ‚≠ê RESE√ëAS
//////////////////////
model Review {
  id         String   @id @default(uuid())
  businessId String
  clientId   String
  employeeId String
  rating     Int
  comment    String?
  createdAt  DateTime @default(now())

  business Business @relation(fields: [businessId], references: [id])
  client   Client   @relation(fields: [clientId], references: [id])
  employee Employee @relation(fields: [employeeId], references: [id])
}

//////////////////////
// üéÅ PUNTOS DE LEALTAD
//////////////////////
model LoyaltyPoint {
  id         String   @id @default(uuid())
  businessId String
  clientId   String
  points     Int      @default(0)
  updatedAt  DateTime @updatedAt

  business Business @relation(fields: [businessId], references: [id])
  client   Client   @relation(fields: [clientId], references: [id])

  @@unique([businessId, clientId])
}

enum SaleStatus {
  COMPLETED
  CANCELLED
  REFUNDED
}

//////////////////////
// üí∞ VENTAS (El coraz√≥n del POS)
//////////////////////
model Sale {
  id         String @id @default(uuid())
  businessId String
  folio      Int    @default(autoincrement()) // Ticket #1, #2...

  clientId      String? // Opcional para "P√∫blico General"
  employeeId    String // Qui√©n atendi√≥/vendi√≥
  appointmentId String? @unique // Opcional: liga la venta a una cita del calendario

  // Totales financieros
  subtotal Float @default(0)
  discount Float @default(0)
  total    Float // Monto final cobrado

  status    SaleStatus @default(COMPLETED)
  notes     String? // Para auditor√≠a: "Se aplic√≥ descuento por retraso"
  createdAt DateTime   @default(now()) // LA HORA REAL DEL COBRO
  updatedAt DateTime   @updatedAt

  business    Business     @relation(fields: [businessId], references: [id])
  client      Client?      @relation(fields: [clientId], references: [id])
  employee    Employee     @relation(fields: [employeeId], references: [id])
  appointment Appointment? @relation(fields: [appointmentId], references: [id])

  items    SaleItem[]
  payments Payment[]
}

model SaleItem {
  id          String  @id @default(uuid())
  saleId      String
  serviceId   String?
  description String // Nombre del servicio al momento de vender (Snapshot)
  price       Float // Precio al que se vendi√≥ (hist√≥rico)
  quantity    Int     @default(1)

  sale    Sale     @relation(fields: [saleId], references: [id])
  service Service? @relation(fields: [serviceId], references: [id])
}

model CashClose {
  id          String   @id @default(uuid())
  businessId  String
  userId      String // Qui√©n hizo el corte
  openingDate DateTime
  closingDate DateTime @default(now())

  cashExpected Float // Lo que el sistema dice
  cashActual   Float // Lo que el usuario cont√≥ f√≠sicamente
  difference   Float // Faltante o sobrante

  notes String?

  business Business @relation(fields: [businessId], references: [id])
}
